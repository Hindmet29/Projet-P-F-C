import random#importation module
print ( "Bienvenue dans le jeu Pierre Feuille Ciseaux !" )
print ( "Les règles du jeu Pierre - Feuille - Ciseaux sont les suivantes." )
print ( "La pierre casse les ciseaux : la pierre gagne." )
print ( "Les ciseaux coupent la feuille : les ciseaux gagnent." )
print ( "La feuille enveloppe la pierre : la feuille gagne." )
print ( )
#intialisations generale 
nom=input("Saisir votre prénom:")
joueur_victoires=0
ordi_victoires=0
nuls=0
condition_de_fin_de_boucle=2#nombre de points qu'il faut pour gagner 
selection_lettres = ["p", "c", "f", "q"]
fin  = False
print ( "Le premier qui marque",condition_de_fin_de_boucle,"points gagne la partie" )

while not fin:
    
    print(nom," : ",joueur_victoires,"Egalités:",nuls,"Ordi:",ordi_victoires)#affichage du score   
    a = input(nom + " choisissiez (p)ierre , (f)euille , (c)iseaux ou (q)uitter: ")
    print(a)
    if a =="q":
        print(" Vous avez quitté le jeu")
        fin=True
    if lettre not in selection_lettres:
        print(" Vous avez quitté le jeu")
        #si le joueur entre un caractere qui n'est pas ,p,c,f ou q ,il quitte le jeu
        if condition_de_fin_de_boucle:
          fin = True #quitter la boucle et le jeu
          if a !="p" and a != "f" and a != "c":
              if lettre !="p" and lettre!="f" and lettre !="c":
                  continue #ignore la suite du programme        
    b = random.randint(1, 3)#randit permet d'inserer les valeurs 
    #choix du joueur et de l'ordi aleatoirement  
    if b==1:
        print("l'ordi a fait pierre")
    elif b==2:
        print("l'ordi a fait feuille")
    else:
        print("l'ordi a fait ciseaux")
    if a == "p" and b == 1 or a == "c" and b == 3 or a == "f" and b == 2:
        print("match nul")
        nuls=nuls + 1 #rajoute 1 point a la variable nuls  
    elif a == "p" and b == 3 or a == "c" and b == 2:
        print("vous avez gagné")
        joueur_victoires=joueur_victoires+1#rajoute 1 point a la variable joueur_victoires
    else:
        print("vous avez perdu")
        ordi_victoires=ordi_victoires + 1#rajoute 1 point a la variable ordi_victoires
        
